{
  "name": "apflare",
  "description": "ActivityPub compatible server running on Cloudflare Worker.",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@8.6.11",
  "workspaces": [
    "./apps/*",
    "./packages/*"
  ],
  "devDependencies": {
    "@apflare/eslint-config": "workspace:*",
    "@apflare/prettier-config": "workspace:*",
    "@vitest/coverage-v8": "^0.33.0",
    "eslint": "^8.46.0",
    "prettier": "^3.0.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.33.0"
  },
  "scripts": {
    "test": "vitest",
    "test:coverage": "vitest --coverage.enabled --coverage.reporter=text --coverage.reporter=json-summary --coverage.reporter=json"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@apflare/eslint-config"
  },
  "prettier": "@apflare/prettier-config"
}
